<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:background="#081B33"
                                                   tools:context=".views.ViewLogin">

    <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="400dp"
            app:cardElevation="9dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardBackgroundColor="#152642"
            app:cardCornerRadius="10dp"

    >
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <EditText
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/login_password"
                    android:id="@+id/login_email"
                    android:textColor="#FAFAFA"
                    android:inputType="textEmailAddress" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="#FAFAFA"
                    android:hint="Correo Electrónico"
                    android:textColorHint="#BABABA"

            />
            <EditText
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    app:layout_constraintTop_toBottomOf="@id/login_email"
                    app:layout_constraintBottom_toBottomOf="@id/login_button"
                    android:id="@+id/login_password"
                    android:textColor="#FAFAFA"
                    android:inputType="textPassword" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="#FAFAFA"
                    android:hint="Contraseña"
                    android:textColorHint="#BABABA"
            />
            <Button
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    app:layout_constraintTop_toBottomOf="@id/login_password"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/login_button"
                    android:text="Iniciar Sesión"
                    android:textColor="#FAFAFA"
                    android:backgroundTint="#2F4562"
            />
            <TextView
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textColor="#FAFAFA"
                    android:text="Registrate"
                    android:id="@+id/login_register_button"
                    android:textAlignment="center"
            />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>