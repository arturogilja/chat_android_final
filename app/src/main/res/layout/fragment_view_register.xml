<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#081B33"
        tools:context=".views.ViewRegister">

    <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="570dp"
            app:cardElevation="9dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardBackgroundColor="#152642"
            app:cardCornerRadius="10dp"

    >
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <EditText
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/register_email"
                    android:textColor="#FAFAFA"
                    android:inputType="textEmailAddress"
                    app:layout_constraintBottom_toTopOf="@id/register_password" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:backgroundTint="#FAFAFA"
                    android:hint="Correo Electrónico"
                    android:textColorHint="#BABABA"

            />
            <EditText
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:id="@+id/register_password"
                    android:textColor="#FAFAFA"
                    android:inputType="textPassword"
                    app:layout_constraintTop_toBottomOf="@id/register_email"
                    app:layout_constraintBottom_toTopOf="@id/register_username"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="#FAFAFA"
                    android:hint="Contraseña"
                    android:textColorHint="#BABABA"

            />
            <EditText
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:id="@+id/register_username"
                    android:textColor="#FAFAFA"
                    android:inputType="text"
                    app:layout_constraintTop_toBottomOf="@id/register_password"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/register_name"
                    android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="#FAFAFA"
                    android:hint="Nombre de Usuario"
                    android:textColorHint="#BABABA"

            />
            <EditText
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:id="@+id/register_name"
                    android:textColor="#FAFAFA"
                    android:inputType="text"
                    app:layout_constraintTop_toBottomOf="@id/register_username"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/register_lastname"
                    android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="#FAFAFA"
                    android:hint="Nombre"
                    android:textColorHint="#BABABA"

            />
            <EditText
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:id="@+id/register_lastname"
                    android:textColor="#FAFAFA"
                    android:inputType="text"
                    app:layout_constraintTop_toBottomOf="@id/register_name"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/register_phone"
                    android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="#FAFAFA"
                    android:hint="Apellidos"
                    android:textColorHint="#BABABA"

            />
            <EditText
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:id="@+id/register_phone"
                    android:textColor="#FAFAFA"
                    android:inputType="phone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/register_lastname"
                    app:layout_constraintBottom_toTopOf="@id/register_button"
                    android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="#FAFAFA"
                    android:hint="Teléfono"
                    android:textColorHint="#BABABA"

            />
            <Button
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    app:layout_constraintBottom_toBottomOf="@+id/register_login_button"
                    app:layout_constraintTop_toBottomOf="@id/register_phone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/register_button"
                    android:text="Registrarse"
                    android:textColor="#FAFAFA"
                    android:backgroundTint="#2F4562"
                    android:layout_marginBottom="8dp"/>
            <TextView
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textColor="#FAFAFA"
                    android:text="Inicia Sesión"
                    android:id="@+id/register_login_button"
                    android:textAlignment="center"

            />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>